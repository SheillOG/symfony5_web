{% extends 'login.base.twig' %}

{% block title %}Se connecter - RaxorShop{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col">
                <form method="post">
                    <div class="container">
                        <div class="row">
                            <h1 class="h3 mb-3 font-weight-normal">Connectez vous d√®s maintenant</h1>
                        </div>
                        <div class="row">
                            <label for="inputEmail" >Adresse Email :</label>
                        </div>
                        <div class="row">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                                   placeholder="Adresse Email" autocomplete="off" onclick="verifChamps(this)" onblur="verifChamps(this)" required >
                        </div>
                        <div class="row">
                            <label for="inputPassword">Mot de passe :</label>
                        </div>
                        <div class="row">
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="row">
{#                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>#}

                            <button class="btn btn-lg btn-success btnConnexion" type="submit">Se connecter</button>
                            <a class="btn btn-lg btn-warning btnInscription" href="{{ path('app_register') }}" id="inscription_link">S'inscrire</a>
                        </div>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
