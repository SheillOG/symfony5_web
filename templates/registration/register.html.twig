{% extends 'registration.base.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_start(registrationForm) }}
            </div>
            <div class="col">
                <h1>Inscription</h1>
            </div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(registrationForm.nom) }}
            </div>
            <div class="col">
                {{ form_row(registrationForm.prenom) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            <div class="col">
                {{ form_row(registrationForm.pseudo) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="col">
                {{ form_row(registrationForm.num_tel) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(registrationForm.country) }}
                {{ form_row(registrationForm.photoProfil) }}
                <div id="file-name"></div>
            </div>
        </div>
        <div class="row">
            <div class="col"></div> <!---Pour le responsive et centrer le bouton--->
            <div class="col">
                <button type="submit" class="btn bg-success" style="margin-left: 10%;">Valider l'inscription</button>
                {{ form_end(registrationForm) }}
            </div>
            <div class="col"></div> <!---Pour le responsive et centrer le bouton--->
        </div>
    </div>

    {% block javascripts %}
        <script>
                var selector = document.getElementById('registration_form_photoProfil').value;

                function processSelected(fileInput) {
                    var files = fileInput.files;
                    var nomFichier = files[0].name
                    document.getElementById("file-name").innerHTML = "<p style='color: #156b00;'><b>Vous avez s√©lectionner une photo : </b><i>" + selector + nomFichier + "</i></p>";
                }

                $.getJSON("countries-FR.json", function(json) {
                    console.log(json);
                })
        </script>
    {% endblock %}
{% endblock %}
