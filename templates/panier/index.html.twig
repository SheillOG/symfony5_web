{% extends 'panier.base.twig' %}


{% block title %}Boutique - RaxorShop{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Bonjour! Voici votre panier ✅:</h1>
                {% if items | length > 0 %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Produit</th>
                            <th>Catégorie</th>
                            <th>Quantité</th>
                            <th>Total Prix Produit</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr>
                                <td><img src="{{ asset('../Images/Produits/' ~ item.produit.image) }}" style="width: 100px;height: 100px;"></td>
                                <td>{{ item.produit.nomProduit }}</td>
                                <td>{{ item.produit.idCategorie }}</td>
                                <td><a href="{{ path('panier_moins', {id: item.produit.idProduit}) }}"
                                       class="btn btn-danger btn-sm">-</a>
                                    {{ item.quantity }}&nbsp<a href="{{ path('panier_plus', {id: item.produit.idProduit}) }}" class="btn btn-danger btn-sm">+</a>
                                </td>
                                <td>{{ item.produit.tarifProduit * item.quantity }}€</td>
                                <td>
                                    <a href="{{ path('panier_remove', {id: item.produit.idProduit}) }}"
                                       class="btn btn-danger btn-sm">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="5" class="text-right"></td>
                            <td class="text-center"><h2><b>Total :</b> {{ total }} €</h2></td>
                        </tr>
                        <tr>
                            <td colspan="5" style="border: none;" class="text-right"><td><div id="paiement_paypal"></div></td></td>
                        </tr>
                        </tfoot>
                    </table>
                {% else %}
                    <h3>Votre panier est vide</h3>
                {% endif %}
            </div>
        </div>


    </div>
    {% block javascripts %}
        <script src="https://www.paypal.com/sdk/js?client-id=test"></script> <!--On importe le sdk paypal-->
        <script>
            {% if app.user %}
            //Configuration de nos boutons paypal
            paypal.Buttons({
                createOrder: function(data, actions) {
                    return actions.order.create({
                        purchase_units: [{
                            amount: {
                                value: {{ total }}
                            }
                        }]
                    });
                },
                onApprove: function(data, actions) {
                    return actions.order.capture().then(function(details) {

                        window.location.href = "{{ path('panier_checkout', {'id': app.user.id}) }}";

                        //alert('La transaction à bien été effectué ' + details.payer.name.given_name);
                    });
                }
            }).render('#paiement_paypal');
            {% else %}
            document.getElementById("paiement_paypal").innerHTML = "<p style='color: red'>Vous devez être connecté ou inscrit pour pouvoir effectués des paiements</p>";
            {% endif %}
        </script>
        {% endblock %}
{% endblock %}
