{% extends 'mon_profil.base.twig' %}

{% block title %}Hello MonProfilController!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>

    <div class="container" id="account_page">
        <div class="row">
            <div class="col">
                {% if app.user %}
                <div class="card user_logo_div" id="user_logo_div"
                     style="background-color: {{ app.user.styleCouleurProfil }}">
                    <img src="{{ asset('../Images/Clients/Photos/' ~ app.user.photoProfil) }}" class="card-img"
                         alt="..." id="user_logo_img">
                    <div class="card-img-overlay">

                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card text-center account_details" id="user_details_div" style="background-color: {{ app.user.styleCouleurProfil }}">
                                <div class="card-header">{{ app.user.pseudo }}  &nbsp;<span><i class="fas fa-pencil-alt" data-toggle="modal" data-target="#modifPseudo" id="edit_pseudo"></i></span></div>

                                <div class="card-body">
                                    <h5 class="card-title"></h5>
                                    <div id="colorWell">
                                        <form method="post" action="{{ path('profil_update', {'id': app.user.id}) }}">
                                            <label for="colorWell">Couleur du profil :</label>

                                            <input type="color" id="colorWell" name="color_picker">


                                            <input type="submit" value="Sauvegarder" onclick="{{ path('profil_update', {'id': app.user.id}) }}">
                                        </form>
                                        <hr>
                                    </div>
                                    <p class="card-text"><b>Adresse email : </b> <i>{{ app.user.email }}</i></p>
                                    <p class="card-text"><b>Nom : </b><i>{{ app.user.nom }} </i></p>
                                    <p class="card-text"><b>Prenom : </b><i>{{ app.user.prenom }} </i></p>
                                    <p class="card-text"><b>numéro de téléphone :</b> <i>{{ app.user.numTel }} </i></p>
                                    <p class="card-text"><b>Pays :</b> <i>{{ app.user.country }} </i></p>
                                </div>
                                <div class="card-footer text-muted">Compte validé</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="col">
                <div class="container" id="detail_commands_user">
                    <div class="row">
                        {% if app.user %}
                        <div class="col">
                            <h3 style="border-bottom: 1px solid">Récentes commandes</h3>
                            {% if commandes | length > 0 %}
                            <table class="table table-striped table-dark" id="recent_commands">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Date de la commande</th>
                                    <th scope="col">Montant total de la commande</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commande in commandes %}
                                    <tr>
                                        <td>{{ commande.id }}</td>
                                        <td>{{ commande.dateCommande }}</td>
                                        <td>{{ commande.montantTotal }}</td>
                                    </tr>
                                {% endfor %}
                                {% else %}
                                    <h1>Vous n'avez effectué aucun achat pour le moment </h1>
                                {% endif %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script>

            var colorWell;

            {% if app.user %}
            var defaultColor = '{{ app.user.styleCouleurProfil }}';
            {% else %}
            var defaultColor = '#0000ff';
            {% endif %}
            function startup() {
                colorWell = document.querySelector("#colorWell");
                colorWell.value = defaultColor;
                colorWell.addEventListener("input", updateFirst, false);
                colorWell.addEventListener("change", updateAll, false);
                colorWell.select();
            }

            function updateFirst(event) {
                var div = document.getElementById("user_logo_div");
                var div2 = document.getElementById("user_details_div");
                if (div && div2) {
                    div.style.backgroundColor = event.target.value;
                    div2.style.backgroundColor = event.target.value;
                }
            }

            function updateAll(event) {
                document.getElementById("user_logo_div").forEach(function (div) {
                    div.style.backgroundColor = event.target.value;
                });

                document.getElementById("user_details_div").forEach(function (div2) {
                    div2.style.backgroundColor = event.target.value;
                });
            }

            window.addEventListener("load", startup, false);

        </script>
    {% endblock %}
{% endblock %}
