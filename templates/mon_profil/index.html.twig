{% extends 'mon_profil.base.twig' %}

{% block title %}Hello MonProfilController!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>


    <div class="container">
        <div class="row">
                <div class="col">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{ app.user.afficherBanniere }}" id="bannière_profil"
                             alt="Card image cap">
                        <div class="card-img-overlay" style="color: white;">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="{{ app.user.afficherPhoto }}" alt="Card image cap">
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <p class="card-text"><b>Adresse email : {{ app.user.email }}</b> <i></i></p>
                            <p class="card-text"><b>Pseudonyme : {{ app.user.pseudo }}</b> <i></i></p>
                            <p class="card-text"><b>numéro de téléphone : {{ app.user.numTel }}</b> <i></i></p>

                            <p class="card-text"><small class="text-muted">Compte validé</small></p>
                        </div>
                    </div>
                </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Dernières ventes</th>
                        <th scope="col">Date de la commande</th>
                        <th scope="col">Montant de la commande</th>
                        <th scope="col">Facture associée</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.id }}</td>
                            <td>{{ commande.dateCommande }}</td>
                            <td>{{ commande.montantTotal }} €</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}
