{% extends 'produits.base.twig' %}

{% block body %}

    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mon_profil') }}">Compte</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include 'produit/_filter.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9">
                <div class="grid">
                    {% for produit in produits %}
                        <div class="card">
                            <img src="{{ asset('../Images/Produits/' ~ produit.image) }}" alt="" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">{{ produit.nomProduit }}</h5>
                                <div class="card-title">
                                    <a href="{{ path('panier_add', {id: produit.idproduit}) }}"
                                       class="btn btn-dark"><i
                                                class="bi bi-cart-plus"></i></a>
                                    <a href="{{ path('produit_show', {'idproduit': produit.idproduit}) }}"
                                       class="btn btn-dark">Voir détails</a>
                                    <span class="h5 mt-auto tarif-overlay">{{ produit.tarifProduit }}€</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div>
                    {{ knp_pagination_render(produits) }}
                </div>
            </div>
        </div>
    </div>

    {# <a href="{{ path('produit_new') }}">Create new</a>
    <a href="{{ path('produit_edit', {'idproduit': produit.idproduit}) }}">edit</a> #}
{% endblock %}
