{% extends 'produits.base.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="d-flex w-50 order-0">
            <a class="navbar-brand mr-1" href="#">RaxorShop | PPE4</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href=" {{ path('accueil') }}">Accueil</a></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href=" {{ path('produit_index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('panier') }}">Panier</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AdminSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_AGENT') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">AgentSpace</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="">ClientSpace</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('app_login') }}">Authentification</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <span class="navbar-text small text-truncate mt-1 w-50 text-right order-1 order-md-last">always show</span>
    </nav>


    <div class="container" id="detailPrd_Background">
        <div class="row">
            <div class="col">
                <div class="card detailPrd_Image">
                    <img src="{{ asset('../Images/Produits/' ~ produit.image) }}" class="card-img" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title"><h1><span class="badge rounded-pill bg-warning text-dark" style="margin-top: 300px;">{{ produit.tarifProduit }} €</span>
                            </h1></h5>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center detailPrd_Description">
                    <div class="card-header">{{ produit.nomProduit }}</div>
                    <div class="card-body">
                        <a href="{{ path('panier_add', {id: produit.idproduit}) }}" class="btn btn-success">Ajouter au
                            panier</a>
                    </div>
                    <div class="card-footer text-muted">{{ produit.idCategorie }}</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card text-center detailPrd_Description">
                    <div class="card-header">
                        Description
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ produit.libelle }}</p>
                    </div>
                    <div class="card-footer text-muted">Jeu certifié</div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" id="detailPrd_Comment">
        <div class="row">
            <div class="col">
                <h3 style="border-bottom: 1px solid">Avis utilisateurs</h3>
                <table class="table table-striped table-dark" id="avis_utilisateurs">
                    <thead>
                    <tr>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Message</th>
                        <th scope="col">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commentaire in commentaires %}
                    {% if commentaire | length > 0 %}
                    <tr>
                        <td>{{ commentaire.idClient }}</td>
                        <td>{{ commentaire.message }}</td>
                        <td>{{ commentaire.date }}</td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                    </tbody>
                </table>

                <div class="form-group">
                    {% if is_granted('ROLE_USER') %}
                    <label for="exampleFormControlTextarea1"><h5>Ecrire un commentaire sur le produit</h5></label>
                    <form method="post" action="{{ path('produit_comment', {'idproduit': produit.idproduit}) }}">
                        <textarea class="form-control" id="commentaire_produit" name="commentaire_produit" rows="3"></textarea>
                        <input type="submit" value="Soumettre" onclick="{{ path('produit_comment', {'idproduit': produit.idproduit}) }}">
                    </form>
                </div>
                {% else %}
                    <label for="exampleFormControlTextarea1"><h5>Ecrire un commentaire sur le produit</h5></label>
                    <textarea class="form-control" id="commentaire_produit" name="commentaire_produit"
                              rows="3" placeholder="Vous devez être connecté pour écrire un commentaire" disabled></textarea>
                    <input class="btn btn-danger btn" value="Soumettre le commentaire" disabled>
                {% endif %}
            </div>
        </div>
    </div>
    {% block javascripts %}
    {% endblock %}
{% endblock %}
